{
  "version": "1.0.0",
  "name": "nodejs-app-boilerplate",
  "description": "A Node.js server-side app boilerplate with HTTP/2 server push and Critical CSS",
  "author": "Bran van der Meer <branmovic@gmail.com> (http://bran.name/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/branneman/nodejs-app-boilerplate.git"
  },
  "engines": {
    "node": "8.9.0"
  },
  "scripts": {
    "start": "node index.js",
    "test": "standard && jest",
    "dev": "NODE_ENV=dev npm start"
  },
  "dependencies": {
    "electrolyte": "^0.5.0",
    "http2": "^3.3.6",
    "middlewarejs": "^0.4.0",
    "mime": "^1.3.6",
    "nunjucks": "^3.0.1",
    "send": "^0.16.0"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "standard": "*"
  },
  "env": {
    "NODE_ENV": "production",
    "APP_SERVER_PORT": "8443",
    "APP_SERVER_CERT_KEY": "cert/key.pem",
    "APP_SERVER_CERT_CERT": "cert/cert.pem"
  },
  "standard": {
    "env": {
      "jest": true
    }
  }
}
